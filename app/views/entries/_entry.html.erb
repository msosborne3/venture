<div class="col-md-12">
  <div class="entry">
    <div class="pic">
      <%= image_tag entry.user.profile_picture.url(:thumb), class: "img-circle" %>
    </div>
    <div class="content">
      Author: <%= link_to entry.user.full_name, user_path(entry.user) %><br>
      <%= link_to entry.title, entry_path(entry) %><br>
      <%= truncate(entry.content) %><br>
    </div>
    <br>
  </div>
</div>