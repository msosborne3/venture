<!-- Partial displays the form for creating a new place or editing a place. Form styled with bootstrap. -->

<%= form_for(@place) do |f| %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>