<%= render partial: 'users/profile_heading', locals: {user: @post.post_user} %>

<div class="post-page">
  <% if current_user == @post.post_user %>
    <%= link_to "Edit Post", edit_place_post_path(@post.place), class: "btn btn-default" %>
    <%= link_to 'Delete Post', place_post_path(@post.place, @post),
                  data: {:confirm => 'Are you sure?'}, :method => :delete, class: "btn btn-default" %>
  <% end %>

  <div class="post-card">
    <a href="<%= place_post_path(@post.place, @post) %>"><%= image_tag @post.post_photo.url(:medium), class: 'post-photo' %></a>
    <div class="post-profile">
      <%= image_tag @post.post_user.profile_picture.url(:small), class: "img-circle"%>
    </div>
    <div class="post-info">
      <%= link_to @post.post_user.full_name, user_path(@post.post_user) %><br>
      <%= link_to @post.place.name, place_path(@post.place) %><br>
      <p><%= @post.description %></p>
    </div>
  </div>
</div>