<% if array.length > 0 %>
  <div class="row">
    <% array.each do |post| %>
      <div class="col-md-3">
        <div class="post-card">
          <a href="<%= place_post_path(post.place, post) %>"><%= image_tag post.post_photo.url(:medium), class: 'post-photo' %></a>
          <div class="post-info">
            <%= link_to post.post_user.full_name, user_path(post.post_user) %>
            <p><%= truncate(post.description) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p><%= message %></p>
<% end %>