<% if array.length > 0 %>
  <div class="row">
    <% array.each do |post| %>
      <div class="col-md-3">
        <div class="post-card">
          <a href="<%= place_post_path(post.place, post) %>"><%= image_tag post.post_photo.url(:medium), class: 'post-photo' %></a>
          <div class="post-profile">
            <%= image_tag post.post_user.profile_picture.url(:small), class: "img-circle"%>
          </div>
          <div class="post-info">
            <%= link_to post.post_user.full_name, user_path(post.post_user) %><br>
            <%= link_to post.place.name, place_path(post.place) %><br>
            <p><%= truncate(post.description, length: 26) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="message"><%= message %></p>
<% end %>