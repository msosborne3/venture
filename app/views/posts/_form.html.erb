<%= form_for(@post), html: {multipart: true} do |f| %>
  <div class="field">
    <%= f.label :post_photo %>
    <%= f.file_field :post_photo %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control'%>
  </div>

  <%= f.submit class: 'btn btn-default' %>
<% end %>