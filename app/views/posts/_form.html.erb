<!-- Form components for creating new posts and editing posts. Form styled with bootstrap. -->
<%= form_for [@place, @post] do |f| %>
  <div class="field">
    <%= f.label :post_photo %>
    <%= f.file_field :post_photo %>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control'%>
  </div>

  <%= f.submit class: 'btn btn-default' %>

<% end %>