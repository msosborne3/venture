<div class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Logo in the navbar links to the homepage -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li> <a href="/"><%= image_tag "Venture-logo.png", class: "logo" %></a> </li>
        </ul>
        
        <!-- Search bar in navigation -->
        <%= form_tag(search_path, :method => "get", id: "search-form", class: 'navbar-form navbar-left') do %>
            <div class="form-group">
              <%= text_field_tag :search, params[:search], placeholder: "Search", class: 'form-control' %>
              <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
            </div>
          <% end %>

        <!-- Navbar: if user is signed in then they see links to their profile and to sign out. If no user is signed in then they see links to sign in or sign up. -->
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'Profile', user_path(current_user) %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :get %></li>
          <% else %>
            <li><%= link_to 'Sign In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>