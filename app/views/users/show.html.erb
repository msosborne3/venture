<%= render 'profile_heading' %>

<h2 class="heading">Places</h2>

<div class="row">
  <% if current_user == @user %>
    <div class="col-sm-3">
      <div class="places">
        <a class="name-thumbnail place-name glyphicon glyphicon-plus add-new-place" href="<%= new_place_path %>"></a>
      </div>
    </div>
  <% end %>

  <% if @places.length > 0 %>
    <% @places.each do |place| %>
      <div class="col-sm-3">
        <div class="places">
          <%= link_to place.name, place_path(place), class: 'name-thumbnail place-name' %>
        </div>
      </div>
    <% end %>

  <% else %>
    <% unless @user == current_user %>
      <p class="message"><%= @user.first_name %> hasn't created any places yet.</p>
    <% end %>
  <% end %>
</div>